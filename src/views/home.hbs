 <h1>Cat Shelter</h1>
        <form action="/cats/search" method="GET">
            <input type="text" name="text" value="{{searchQuery}}">
            <button type="submit">Search</button>
        </form>
 
 <section class="cats">
            <ul>
                {{#each cats}}
                    <li>
                        <img src="{{imageUrl}}" alt="{{name}}">
                        <h3>{{name}}</h3>
                        <p><span>Breed: </span>{{breed}}</p>
                        <p><span>Description: </span>{{description}}</p>
                        <ul class="buttons">
                            <li class="btn edit"><a href="/cats/{{id}}/details">Change Info</a></li>
                            <li class="btn delete"><a href="/cats/{{id}}/delete">New Home</a></li>
                        </ul>
                    </li>
                {{else}}
                <h1>There are no cats</h1>
                {{/each}}
            </ul>
</section>
